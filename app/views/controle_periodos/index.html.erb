<div class="square">
  <h1 class="text-center"> Períodos</h1> <br>
  <table class="table table-striped table-responsive-sm text-center" style="width: 100% !important;">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Cod</th>
        <th scope="col">Data</th>
        <th scope="col">Homologação</th>
        <th scope="col">Opções</th>
      </tr>
    </thead>
    <tbody>
    <% @controle_periodos.each do |controle_periodo| %>
        <tr>
          <td><%= controle_periodo.id%></td>
          <td><%= controle_periodo.data.strftime("%d/%m/%Y")%></td>
          <td><%= "#{controle_periodo.homologation.id}: #{controle_periodo.homologation.titulo} - #{controle_periodo.homologation.compani.razaoSocial}"%></td>
          <td>
          <%= link_to 'Editar', edit_controle_periodo_path(controle_periodo), :class => "btn btn-warning text-white"  %>
          <%= link_to 'Excluir', controle_periodo, method: :delete, data: { confirm: 'Você tem certeza que deseja excluir este registro?' }, :class => "btn btn-danger  text-white" %>
          </td>
        </tr>  
      <% end %>
    </tbody>
  </table>
  <div style="position:absolute; bottom: 4%;">
    <%= link_to new_controle_periodo_path, :class => "btn btn-success text-white" do %> Cadastrar Período </i>  
    <% end %>
  </div>
</div>
